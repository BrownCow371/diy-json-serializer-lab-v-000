<a href="#" class="js-next" data-id="<%=@product.id%>">Next Product</a>
<h1 class ="productName"><%=@product.name%></h1>


<p class ="prodID"><%=@product.id%></p>
<strong>Inventory: </strong><p class="prodInventory"><%=@product.inventory%></p><br>
<strong>Price: </strong><p class="prodPrice"> <%=@product.price%></p>
<p class="prodDesc"><%=@product.description%></p>

<script type="text/javascript" charset="utf-8">
  $(function(){
    $(".js-next").on("click", function(){
      // let nextID = parseInt($(this).data("id"))+1
      let nextId = parseInt($(".js-next").attr("data-id")) + 1;
      console.log(nextId)
      $.getJSON("/products/" + nextId + "/data", function(data){
        console.log(data["id"])

        $(".prodID").text(data["id"]);

        $(".productName").text(data["name"]);
        $(".prodInventory").text(data["inventory"]);
        $(".prodPrice").text(data["price"]);
        $(".prodDesc").text(data["description"]);
        $(".js-next").attr("data-id", data["id"]);
          // debugger
      });
    });
  });
  // debugger
</script>
